@model Booki.Models.ControloAcessosModel

@{
    ViewBag.Title = "Registo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <h2>Formulário de Registo</h2>

    <div class="row">
        <div class="col-md-3 col-sm-3 col-xs-3">
            @Html.LabelFor(o => o.Username, new { @class="control-label"})
        </div>
        <div class="col-md-8 col-sm-8 col-xs-8">
            @Html.TextBoxFor(o => o.Username, new { @class = "form-control input-sm" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-3 col-sm-3 col-xs-3">
            @Html.LabelFor(o => o.Password, new { @class = "control-label" })
        </div>
        <div class="col-md-8 col-sm-8 col-xs-8">
            @Html.PasswordFor(o => o.Password, new { @class = "form-control input-sm" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-3 col-sm-3 col-xs-3">
            @Html.LabelFor(o => o.Nome, new { @class = "control-label" })
        </div>
        <div class="col-md-8 col-sm-8 col-xs-8">
            @Html.TextBoxFor(o => o.Nome, new { @class = "form-control input-sm" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-3 col-sm-3 col-xs-3">
            @Html.LabelFor(o => o.Morada, new { @class = "control-label" })
        </div>
        <div class="col-md-8 col-sm-8 col-xs-8">
            @Html.TextBoxFor(o => o.Morada, new { @class = "form-control input-sm" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-3 col-sm-3 col-xs-3">
            @Html.LabelFor(o => o.CodigoPostal, new { @class = "control-label" })
        </div>
        <div class="col-md-8 col-sm-8 col-xs-8">
            @Html.TextBoxFor(o => o.CodigoPostal, new { @class = "form-control input-sm" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-3 col-sm-3 col-xs-3">
            @Html.LabelFor(o => o.IdLocalizacao, new { @class = "control-label" })
        </div>
        <div class="col-md-8 col-sm-8 col-xs-8">
            
        </div>
    </div>

    <button class="btn btn-primary" type="submit">Registar</button>
}